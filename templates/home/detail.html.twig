{% extends 'base.html.twig' %}

{% block title %}page{{ comment.id }}{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
    <div class="d-flex justify-content-between">
        <div>
            Arnaud  Yanga
        </div>

        <div>
            <a href="{{ path('app_logout') }}"><p class="card-title">Déconnexion</p></a>
        </div>

    </div>
<div class="example-wrapper">
    <div class="album py-5" id="department">
        <div class="container">
            <h1>detail du commentaire</h1>
            <div class="row">
                <div class="col-8">
                    <h5 class="card-title">{{ comment.text }}</h5>
                    <div class="card-body">
                        <p class="card-text">Note : <span class="badge bg-secondary">{{ comment.note }}</span></p>
                        <p class="card-text">Date de creation : <span class="badge bg-secondary">{{ comment.createdAt }}</span></p>
                        {% if  comment.user.firstname is defined and comment.user.firstname is defined %}
                            <p class="card-text">Auteur : <span class="badge bg-secondary">{{ comment.user.firstname}} {{ comment.user.lastname}}  </span></p>
                        {% endif %}
                    </div>
                    <h4 class="card-title">Réponses du commentaire</h4>
                </div>
                <hr/>

            </div>
            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
                {% for answer  in comment.answers %}
                    <div class="col">
                        <div class="card shadow-lg h-100 m-2">
                            <div class="card-body">
                                <a href="{{ path('comments_detail', {id: answer.id }) }}"><h5 class="card-title">{{ answer.text }}</h5></a>
                                <p class="card-text">Note : <span class="badge bg-secondary">{{ answer.note }}</span></p>
                                <p class="card-text">Date de creation : <span class="badge bg-secondary">{{ answer.createdAt }}</span></p>
                                {% if  answer.user.firstname is defined and answer.user.firstname is defined %}
                                    <p class="card-text">Auteur : <span class="badge bg-secondary">{{ answer.user.firstname}} {{ answer.user.lastname}}  </span></p>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>

</div>
{% endblock %}
